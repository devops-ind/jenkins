global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "alerting-rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node'
    static_configs:
      - targets:
        {% for host in groups['all'] %}
        - '{{ hostvars[host]['ansible_host'] }}:9100'
        {% endfor %}

  - job_name: 'jenkins'
    static_configs:
      - targets:
        - 'jenkins-exporter:9118'
